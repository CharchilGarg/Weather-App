<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherActivity"
    android:orientation="vertical"
    android:background="#1E90FF"
    android:id="@+id/linear_layoutWeather">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:padding="15dp"
            android:hint="Enter city name"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:drawableStart="@drawable/location_city"
            android:layout_marginStart="25dp"
            android:id="@+id/editTextCityName"
            android:inputType="textPersonName">

        </EditText>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/search"
            android:layout_marginStart="7dp"
            android:id="@+id/search">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_weather"
       android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewCityWeather"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:textSize="30sp"
            android:text="London , GB"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginStart="25dp"
                android:scaleType="fitXY"
                android:id="@+id/imageviewWeather"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 C"
                    android:textSize="50sp"
                    android:id="@+id/textviewTempWeather"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewWeatherCondWeather"
                    android:text="Few Clouds"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max temp."
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min temp."
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pressure"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wind"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/humidityWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 C"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/maxtempWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 C"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/mintempWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/pressureWeather"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="5dp"
                    android:id="@+id/windWeather"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>